<!-- index.hbs -->
<h1>Plots</h1>
<button>Show all Plots</button>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Plot ID</th>
                    <th>Garden ID</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>1</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>1</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>1</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>2</td>
                </tr>
            </tbody>
        </table>
        <br>
    </div>

    <h2>Add a Plot</h2>
    <div>
        <div class="form-container">
            <form>
                <label for="plots-garden-name">Garden</label>
                <select type="text" id="gardener-id" name="gardener-id" required>
                    <option value="1">[1] New Beginnings</option>
                    <option value="2">[2] Dirt Patch</option>
                </select>
                <br>
                <input type="submit" value="Add Plot">
            </form>
        </div>
    </div>
    <br>
    <h2>Delete a Plot</h2>
    <div>
        <div class="form-container">
            <form>
                <label for="plot-id">Plot ID:</label>
                <input type="number" min="1" max="4" id="plot-id" name="plot-id" required>
                <br>
                <input type="submit" value="Remove Plant">
                <!-- Needs to delete all referenced entities (plots) -->
            </form>
        </div>
    </div>
</div>