
<h1>Gardens</h1>
<table id="gardens-table" class="table table-striped">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
    {{#each data}}
    <tr data-value={{this.ID}}>
        <td>{{this.ID}}</td>
        <td>{{this.Name}}</td>
        <td>{{this.Address}}</td>
        <td>{{this.City}}</td>
        <td>{{this.Zip}}</td>
        <td><button class="delete-row-button" onclick="deleteGarden({{this.ID}})">Delete</button></td>
    </tr>
    {{/each}}
    </tbody>
</table>

<div class="page-forms">
    <div>

        <form class="row g-1" id="add-garden-form-ajax">
            <span class="form-name">Add a Garden</span>
            <div class="col-auto">
                <label for="input-add-garden-name" class="col-sm-2 row-form-label">Name</label>
                <input type="text" class="form-control" id="input-add-garden-name" placeholder="Garden Name">
            </div>
            <div class="col-auto">
                <label for="input-add-garden-streetAddress" class="col-sm-2 row-form-label">Address</label>
                <input type="text" class="form-control" id="input-add-garden-streetAddress" placeholder="Garden Address">
            </div>
            <div class="col-auto">
                <label for="input-add-garden-city" class="col-sm-2 row-form-label">Name</label>
                <input type="text" class="form-control" id="input-add-garden-city" placeholder="Garden City">
            </div>
            <div class="col-auto">
                <label for="input-add-garden-zipCode" class="col-sm-2 row-form-label">Address</label>
                <input type="text" class="form-control" pattern="[0-9]{5}" title="Five digit zip code" id="input-add-garden-zipCode" placeholder="Garden Zipcode">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Add a Garden</button>
            </div>
        </form>


