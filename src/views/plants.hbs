<!-- index.hbs -->
<h1>The server is running!</h1>
<p>If you see this text, the server is <strong>definitely</strong> working!</p>
<table id="plants-table">
    {{!-- Header section --}}
    <thead>
        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, varietyName, type, and price, in order --}}
        {{#each data}}
        <tr data-value={{this.plantID}}>
            <td>{{this.plantID}}</td>
            <td>{{this.varietyName}}</td>
            <td>{{this.type}}</td>
            <td>{{this.price}}</td>
            <td><button onclick="deletePlant({{this.plantID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_plant.js"></script>


<h2>Adding a Plant</h2>
<p>To add a new plant, please enter its information below and click 'Submit'!</p>
<form id="add-plant-form-ajax">
    <label for="input-varietyName">Variety Name: </label>
    <input type="text" name="input-varietyName" id="input-varietyName">
    <br>
    <label for="input-plant-type">Type: </label>
    <input type="text" name="input-plant-type" id="input-plant-type">
    <br>
    <label for="input-price">Price: </label>
    <input type="number" name="input-price" id="input-price">
    <br>
    <input type="submit">
</form>


{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_plant.js"></script>



<h2>Updating a Plant</h2>
<p>To update a specific plant's price, select its variety name and type from the drop-down menu on the left and input a new price on the rightt</p>
<form id="update-plant-form-ajax">

    <label for="input-variety-name">Full name: </label>
    <select name="input-variety-name" id="mySelect">
        <option value="test">Select a Plant</option>
        {{#each data}}
        <option value="{{this.plantID}}">{{this.varietyName} {{this.type}}</option>
        {{/each}}
    </select>

    <label for="input-price">Price: </label>
    <input type="number" name="input-price" id="input-price">
    <br>
    <input type="submit">

</form>

<script src="./js/update_plant.js"></script>